<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
        "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>


    <!-- spring对bean实例化 -->
    <bean id="test" class="com.bigDragon.model.Test"></bean>
    <!-- spring 依赖注入 setter注入方式-->
    <bean id="user1" class="com.bigDragon.model.User1">
        <property name="name">
            <value>小强</value>
        </property>
        <property name="age">
            <value>26</value>
        </property>
        <property name="sex">
            <value>男</value>
        </property>
    </bean>
    <!-- spring 依赖注入 构造器注入方式-->
    <bean name="user2" class="com.bigDragon.model.User2">
        <constructor-arg index="0" type="java.lang.String">
            <value>小张</value>
        </constructor-arg>
        <constructor-arg index="1" type="java.lang.Integer">
            <value>23</value>
        </constructor-arg>
        <constructor-arg index="2" type="java.lang.String">
            <value>女</value>
        </constructor-arg>
    </bean>
    <!-- spring 引用其他类2-->
    <bean name="user3" class="com.bigDragon.model.User3">
        <property name="user1" ref="user1">
        </property>
    </bean>

    <!-- demo -->
<!--   <bean name="/AbstractControllerTest" class="AbstractControllerTest">
        <property name="user1" ref="user1">
        </property>
    </bean>-->
    <!--按bean名称装配-->
    <bean autowire="byName" id="printInfo" class="com.bigDragon.model.PrintInfo"/>
    <!--按bean类型装配-->
    <bean autowire="byType" id="printInfo2" class="com.bigDragon.model.PrintInfo2"/>
